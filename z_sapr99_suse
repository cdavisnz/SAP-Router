#!/bin/sh
# https://github.com/cdavisnz/SAP-Router
# Version:
# 1.0 04/11/2016 @cdavis.nz
# 1.1 28/06/2017 @cdavis.nz Logging Path
# 1.2 08/07/2017 @cdavis.nz Sync from S3
# 1.3 16/08/2017 @cdavis.nz Parameter for SNC partner
# 1.4 28/02/2018 A Bonnefoy : Modification for an already existing SAP instance on server.
#
# built on: Linux SuSE12.0.x86_64
# chkconfig: 345 90 10
# description: SAProuter R99

### BEGIN INIT INFO
# Provides: z_sapr99
# Required-Start: $network $syslog $remote_fs $time
# X-UnitedLinux-Should-Start:
# Required-Stop:
# Default-Start: 3 5
# Default-Stop: 0 1 2 6
# Short-Description: Start the SAProuter R99
# Description: Start the SAProuter R99
### END INIT INFO

RETVAL=0

# Source function library.
. /etc/rc.status
rc_reset

SAPSYSTEMNAME=R99
SAPUSER=r99adm
SAPBASE=/usr/sap/saprouter
SAPEXE=/usr/sap/${SAPSYSTEMNAME}/SYS/exe/run
SAPEXEC=${SAPEXE}/saprouter
SAPHOST=`hostname --ip-address`
SAPPORT=3299
SAPSYNC=Off
AWSREPO=s3://software-sap/SAPROUTER_LINUX/exe

SECUDIR=${SAPBASE}/sec; export SECUDIR
SNC_LIB=${SAPEXE}/libsapcrypto.so; export SNC_LIB
SAPSNCP=""

LOCKFILE=${SAPBASE}/tmp/sap${SAPUSER}-`whoami`.tmp
LOGFILE=${SAPBASE}/tmp/saprouter-`whoami`.log
PATH=${PATH}:$SAPEXE; export PATH
LD_LIBRARY_PATH=$SAPEXE; export LD_LIBRARY_PATH

check()
{
    pgrep -f "${SAPEXEC}" > /dev/null
    RETVAL=$?
    return ${RETVAL}
}

stop()
{
    echo -n $"Shutdown SAPRouter ${SAPSYSTEMNAME}: "

    check

    if [ -d ${SAPBASE} ] && [ ${RETVAL} -eq 0 ]; then
        ${SAPEXEC} -s -H ${SAPHOST} -S ${SAPPORT} > ${LOGFILE} 2>&1
        RETVAL=$?
    else
        RETVAL=1
    fi

    if [ ${RETVAL} -eq 0 ]; then
        rm -f ${LOCKFILE}
        rc_status -v
    else
        rc_status -v
    fi
    return ${RETVAL}
}

start()
{
    echo -n $"Startup SAPRouter ${SAPSYSTEMNAME}: "

    check

    if [ -d ${SAPBASE} ] && [ -x "/usr/bin/aws" ] && [ ${SAPSYNC} == "On" ] && [ ${RETVAL} -ne 0 ]; then

        /usr/bin/aws s3 cp ${AWSREPO}/_aws.sh ${SAPBASE}/exe --quiet

        if [ -f ${SAPBASE}/exe/_aws.sh ]; then
            chmod -f 700 root:sapsys ${SAPBASE}/exe/_aws.sh
            chown root:sapsys ${SAPBASE}/exe/_aws.sh
            ${SAPBASE}/exe/_aws.sh ${SAPSYSTEMNAME} ${SAPBASE} ${SAPUSER} ${AWSREPO}
            rm -f ${SAPBASE}/exe/_aws.sh
        fi
    fi

    if [ -d ${SAPBASE} ] && [ ${RETVAL} -ne 0 ]; then

        START="-u `id -u ${SAPUSER}` ${SAPEXEC} -r -H ${SAPHOST} -I ${SAPHOST} -S ${SAPPORT} -E -J 1048576 -W 60000"
        LOGGING="-G ${SAPBASE}/log/dev_saprouter -T ${SAPBASE}/log/dev_rout"

        case "${SAPSNCP}" in
            CN=*)
            /sbin/startproc ${START} -R ${SAPBASE}/saprouttab -K p:"${SAPSNCP}" ${LOGGING} > ${LOGFILE} 2>&1 &;;
            *)
            /sbin/startproc ${START} -R ${SAPBASE}/saprouttab ${LOGGING} > ${LOGFILE} 2>&1 &;;
        esac

        sleep 2
        check
    else
        RETVAL=1
    fi

    if [ ${RETVAL} -eq 0 ]; then
        touch ${LOCKFILE}
        rc_status -v
    else
        rc_status -v
    fi
    return ${RETVAL}
}

reload()
{
    echo -n $"Reload SAPRouter ${SAPSYSTEMNAME}: "

    check

    if [ -d ${SAPBASE} ] && [ ${RETVAL} -eq 0 ]; then
        ${SAPEXEC} -n -H ${SAPHOST} -S ${SAPPORT} > ${LOGFILE} 2>&1
        RETVAL=$?
    else
        RETVAL=1
    fi

    if [ ${RETVAL} -eq 0 ]; then
        touch ${LOCKFILE}
        rc_status -v
    else
        rc_status -v
    fi
    return ${RETVAL}
}

status()
{
    echo -n $"Status SAPRouter ${SAPSYSTEMNAME}: "

    check

    if [ -d ${SAPBASE} ] && [ ${RETVAL} -eq 0 ]; then
        ${SAPEXEC} -l -H ${SAPHOST} -S ${SAPPORT} > ${LOGFILE} 2>&1
        RETVAL=$?
    else
        RETVAL=1
    fi

    if [ ${RETVAL} -eq 0 ]; then
        touch ${LOCKFILE}
        rc_status -v
    else
        rc_status -v
    fi
    return ${RETVAL}
}

case $1 in
    stop)
        stop
    ;;
    start)
        start
    ;;
    restart)
        stop
        start
    ;;
    reload)
        reload
    ;;
    status)
        status
    ;;
    *)
        echo "Usage $0 (start|stop|restart|reload|status)"
        exit 1;
    ;;
esac
rc_exit
